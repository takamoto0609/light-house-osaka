<%= render "shared/header" %>

<div class="shared_body overflow-auto">
  <% @rooms.each do |room| %>
  <% if room.status == 0 %>
  ユーザーID：<%= room.user_id %>
  <div>
    <button type="button" class="btn btn-outline-primary"><%= link_to room.name, room_messages_path(room) %></button>
    <% if room.status == 0 %>
    <span class="badge badge-pill badge-danger">新規</span>
    <% elsif room.status == 1 %>
    <span class="badge badge-pill badge-warning">相談中</span>
    <% elsif room.status == 2 %>
    <span class="badge badge-pill badge-success">解決済</span>
    <% end %>
  </div>
  <% end %>
  <% end %>
</div>

<%= render "shared/footer" %>