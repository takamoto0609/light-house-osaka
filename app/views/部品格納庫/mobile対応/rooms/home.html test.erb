<%= render "shared/header" %>

<div class="home_page">
  <div class="home_page_L">
    <div class="card col" style="width: 18rem;">
      <h5 class="card-title">相談ルーム作成</h5>
      <button type="button" class="btn btn-outline-primary"><%= link_to "Go", new_room_path %></button>
    </div>
    <div class="card col" style="width: 18rem;">
      <h5 class="card-title">相談ルーム一覧</h5>
      <button type="button" class="btn btn-outline-primary"><%= link_to "Go", new_room_path %></button>
    </div>
    <div class="card col" style="width: 18rem;">
      <h5 class="card-title">プロフィール</h5>
      <button type="button" class="btn btn-outline-primary"><%= link_to "Go", new_room_path %></button>
    </div>

    <% @rooms.where(user_id: current_user.id).each do |room| %>
    <div class="card col" style="width: 18rem;">
      <h5 class="card-title"><%= room.name %>
        <% if room.status == 0 %>
        <span class="badge badge-pill badge-danger">新規</span>
        <% elsif room.status == 1 %>
        <span class="badge badge-pill badge-warning">相談中</span>
        <% elsif room.status == 2 %>
        <span class="badge badge-pill badge-success">解決済</span>
        <% end %>
      </h5>
      <button type="button" class="btn btn-outline-primary"><%= link_to "Go", room_messages_path(room) %></button>
    </div>
    <% end %>

    <div class="card col" style="width: 18rem;">
      <h5 class="card-title">ログアウト</h5>
      <button type="button" class="btn btn-outline-primary"><%= link_to "See you!", destroy_user_session_path, method: :delete %></button>
    </div>

  </div>

  <div class="home_page_R">
  </div>
</div>