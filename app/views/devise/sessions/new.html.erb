<div class="sign_in">
  <div class="container">
    <div class="sign_in_contents">

      <div class="">
        <h2 class="sign_in_title"><i class="fas fa-sun fa-x"></i><br>Buffアプリにログイン</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        メールアドレス<br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <br>
      <div class="field">
        パスワード<br>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>