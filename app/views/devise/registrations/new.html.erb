<div class="sign_in">
  <div class="container">
    <div class="sign_in_contents">
      <div>
        <h2 class="sign_in_title"><i class="fas fa-hat-wizard fa-1x"></i><br>新規アカウント作成</h2>
      </div>
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        氏名　　　(姓)
        <%= f.text_field :family_name, autofocus: true, autocomplete: "name" %>
        (名)
        <%= f.text_field :given_name, autofocus: true, autocomplete: "name" %>
      </div>
      <br>
      <div class="field">
        フリガナ　(姓)
        <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "name" %>
        (名)
        <%= f.text_field :given_name_kana, autofocus: true, autocomplete: "name" %>
      </div>
      <br>
      <div class="field">
        メールアドレス<br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <br>
      <div class="field">
        パスワード
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="field">
        <em>確認のためもう一度入力してください</em><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "登録する" %>
      </div>
      <br>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>