<div class="row">
  <div class="col-3">
  <h1>ユーザー検索</h1>

  <%= search_form_for @p, url: search_profiles_path do |f| %>
  <%= f.label :family_name_eq, '氏名(姓)' %>
  <%= f.collection_select :family_name_eq, @profile_family_name, :family_name, :family_name,  include_blank: '指定なし' %>
  <br>
  <%= f.label :given_name_eq, '氏名(名)' %>
  <%= f.collection_select :given_name_eq, @profile_given_name, :given_name, :given_name,  include_blank: '指定なし' %>
  <br>
  <%= f.label :family_name_kana_eq, 'フリガナ(姓)' %>
  <%= f.collection_select :family_name_kana_eq, @profile_family_name_kana, :family_name_kana, :family_name_kana,  include_blank: '指定なし' %>
  <br>
  <%= f.label :given_name_kana_eq, 'フリガナ(名)' %>
  <%= f.collection_select :given_name_kana_eq, @profile_given_name_kana, :given_name_kana, :given_name_kana,  include_blank: '指定なし' %>
  <br>
  <%= f.label :birth_day_eq, '生年月日' %>
  <%= f.collection_select :birth_day_eq, @profile_birth_day, :birth_day, :birth_day,  include_blank: '指定なし' %>
  <br>
  <%= f.label :sex_id_cont, '性別' %>
  <%= f.collection_select :sex_id_cont, Sex.all, :name, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.label :age_group_id_cont, '年齢' %>
  <%= f.collection_select :age_group_id_cont, AgeGroup.all, :name, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.label :zodiac_sign_id_cont, '星座' %>
  <%= f.collection_select :zodiac_sign_id_cont, ZodiacSign.all, :name, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.label :blood_type_id_cont, '血液型' %>
  <%= f.collection_select :blood_type_id_cont, BloodType.all, :name, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.label :address_id_cont, '住んでいる地域' %>
  <%= f.collection_select :address_id_cont, Address.all, :name, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.label :occupation_id_cont, '職業' %>
  <%= f.collection_select :occupation_id_cont, Occupation.all, :name, :name,  include_blank: '指定なし' %>
  <br>
  <%= f.submit '検索' %>
  <br>
  </div>
<div class="col-9">
  <h1>全プロフィール一覧</h1>
    <% @profiles.each do |profile| %>
    <td>
    <br>
    <li>
      <%= profile.family_name %>
      <%= profile.given_name %>
      <%= profile.family_name_kana %>
      <%= profile.given_name_kana %>
      <%= profile.sex.name %>
      <%= profile.age_group.name %>
      <%= profile.blood_type.name %>
      <%= profile.birth_day %>
      <%= profile.zodiac_sign.name %>
      <%= profile.address.name %>
      <%= profile.occupation.name %>
      <%= profile.work_place %>
    </li>
    <% end %>

    <div class="row">
  <% @profiles.each do |profile| %>
  <div class="card col-3" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <ul class="list-group list-group-flush">
      <%#確認用、後で消す%>
      <li class="list-group-item">profile_id：<%= profile.id %></li>
      <li class="list-group-item">user_id：<%= profile.user_id %></li>
      <%#確認用、後で消す%>
      <li class="list-group-item">氏名：<%= profile.family_name %><%= profile.given_name %></li>
      <li class="list-group-item">フリガナ：<%= profile.family_name_kana %><%= profile.given_name_kana %></li>
      <li class="list-group-item">性別：<%= profile.sex.name %></li>
      <li class="list-group-item">年齢：<%= profile.age_group.name %></li>
      <li class="list-group-item">血液型：<%= profile.blood_type.name %></li>
      <li class="list-group-item">生年月日：<%= profile.birth_day %></li>
      <li class="list-group-item">星座：<%= profile.zodiac_sign.name %></li>
      <li class="list-group-item">住んでいる地域：<%= profile.address.name %></li>
      <li class="list-group-item">職業：<%= profile.occupation.name %></li>
      <li class="list-group-item">勤務先：<%= profile.work_place %></li>
    </ul>
    <div class="card-body">
      <h5 class="card-title">自己紹介</h5>
      <p class="card-text"><%= profile.summary %></p>
    </div>
  </div>
  <% end %>
  </div>
  <% end %>
  </div>

</div>

<button type="button" class="btn btn-outline-light btn-sm"><%= link_to "戻る", mentors_path %></button>